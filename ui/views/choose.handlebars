<div class="container p-lg-5  fs-5 core-div" style="width: 33%">
    <div class="row border-dark border-1 border">
        <h2 class="text-center">
            Choose your registration method
        </h2>
        <div class="col-12">
            <input type="text" class="form-control fs-5 numberOrEmail"  placeholder="Enter email or phone number" >
            <div class="invalid-feedback">
                aboba
            </div>
            <div class="valid-feedback">
                Wonderful!
            </div>
        </div>
        <div class="col-12 p-3 d-flex justify-content-center">
            <input type="checkbox" class="form-check-input" style="margin-right: 10px" id="privacy-terms">
            <label class="form-check-label" >I agree to all <a href="#">privacy terms </a></label>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <button type="button" class="btn btn-success fs-5 m-3 " id="continue-btn" disabled><a href="/auth/verification" class="text-white" >Continue</a></button>
        </div>
        <div class="col-12  d-flex align-items-center justify-content-between">
            <hr style="width: 43%">
            or
            <hr style="width: 43%">
        </div>

        <div class="col-12">
            <div class="d-flex justify-content-around align-items-center">
                <a href="/auth/oauth/google" class="link"> <div class="google brand-link"><i class="fa-brands fa-google"></i> Continue with google</div></a>
                <a href="#" class="link"> <div class="facebook brand-link"><i class="fa-brands fa-facebook"></i> Continue with facebook</div></a>
            </div>
        </div>
    </div>
</div>

